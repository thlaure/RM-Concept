{% extends 'navbar_admin.html.twig' %}

{% block title %}{{ parent() }} - Stocks{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="store pb-5 mb-5 pt-4">
        <div class="container">
            {% if text_alert is defined and class_alert is defined %}
                <div class="alert {{ class_alert }} rounded-0 text-center">{{ text_alert }}</div>
            {% endif %}
            <section>
                <h1 class="display-4 text-center mb-4">Stocks</h1>
                <article>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <div class="row">
                                <div class="w-25 text-center">Image</div>
                                <div class="w-20 text-center">Libellé</div>
                                <div class="w-15 text-center">Référence</div>
                                <div class="w-15 text-center">Prix unitaire</div>
                                <div class="w-15 text-center">Quantité disponible</div>
                            </div>
                        </li>
                        {% for product in products %}
                            {% if product.quantity < 50 %}
                                <li class="list-group-item list-group-item-warning">
                            {% elseif product.quantity < 20 %}
                                <li class="list-group-item list-group-item-danger">
                            {% else %}
                                <li class="list-group-item">
                            {% endif %}
                                <div class="row">
                                    <div class="w-25 text-center"><img class="w-25" src="{{ asset('images/balls/') ~ product.image }}" alt="Image non chargée."/></div>
                                    <div class="w-20 text-center">{{ product.name }}</div>
                                    <div class="w-15 text-center">{{ product.reference }}</div>
                                    <div class="w-15 text-center">{{ product.priceIndividuals }}</div>
                                    <div class="w-15 text-center">{{ product.quantity }}</div>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </article>
            </section>
        </div>
    </div>
{% endblock %}