{% extends 'base.html.twig' %}

{% block body %}
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="collapse navbar-collapse justify-content-md-center" id="containerNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="far fa-comment-dots"></i> Contactez-nous</a>
                    </li>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-user"></i> {{ app.user.firstName }} {{ app.user.name }}
                            </a>
                            <div class="dropdown-menu rounded-0" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#">Mon compte</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="{{ path('logout') }}"><i class="fas fa-sign-out-alt"></i> DECONNEXION</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fas fa-shopping-cart"></i> Panier ({{ app.user.shoppingCart.products|length }})</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('login') }}"><i class="far fa-user"></i> Mon compte client</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" href="#"><i class="fas fa-shopping-cart"></i> Panier</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">RM Concept</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarStore" aria-controls="navbarStore" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-md-center" id="navbarStore">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fa fa-home" aria-hidden="true"></i> Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('shop_customizable-balls') }}"><i class="fas fa-golf-ball"></i> Balles personnalisables</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('shop_company-area') }}"><i class="fas fa-building"></i> Espace entreprise</a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2 rounded-0" type="search" placeholder="Rechercher" aria-label="Rechercher">
                    <button class="btn btn-outline-success my-2 my-sm-0 rounded-0" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                </form>
            </div>
        </nav>
    </header>
{% endblock %}